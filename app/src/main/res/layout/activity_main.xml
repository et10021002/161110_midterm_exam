<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainbackground"
    tools:context="tw.com.a4040e009.a161110_midterm_exam.MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        tools:ignore="ObsoleteLayoutParam" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="235dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/youtube"
            android:id="@+id/youtubeimage"
            android:layout_weight="0.40"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="118dp"
                app:srcCompat="@drawable/news"
                android:id="@+id/newsimage"
                android:background="@color/background"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="118dp"
                app:srcCompat="@drawable/books"
                android:id="@+id/imageView6"
                android:background="@color/background1"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                tools:ignore="ContentDescription" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/b1"
            android:id="@+id/imageView8"
            android:layout_weight="1"
            android:background="@color/background"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/b3"
            android:id="@+id/imageView10"
            android:layout_weight="1"
            android:background="@color/background1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="185dp"
            app:srcCompat="@drawable/b2"
            android:id="@+id/imageView9"
            android:layout_weight="1"
            android:background="@color/background"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/c1"
            android:id="@+id/collection"
            tools:ignore="ContentDescription,InefficientWeight" />

        <ImageView
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/c2"
            android:id="@+id/imageView2"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/c3"
            android:id="@+id/imageView3"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/c4"
            android:id="@+id/imageView4"
            tools:ignore="ContentDescription" />
    </LinearLayout>

</LinearLayout>
